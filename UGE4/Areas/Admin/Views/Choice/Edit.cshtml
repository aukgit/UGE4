@model UGE4.Models.Choice

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Choice</legend>

        @Html.HiddenFor(model => model.ChoiceID)

        <div class="editor-label">
            @Html.LabelFor(model => model.QuestionID, "Question")
        </div>
        <div class="editor-field">
            @Html.DropDownList("QuestionID", String.Empty)
            @Html.ValidationMessageFor(model => model.QuestionID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ChoiceDisplay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ChoiceDisplay)
            @Html.ValidationMessageFor(model => model.ChoiceDisplay)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
