@model UGE4.DbInfrastructure.Subject

@{
    ViewBag.Title = "Subject - Edit";
}

<h2>Editing - Subject</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Subject</legend>

        @Html.HiddenFor(model => model.SubjectID)

        <div class="editor-label">
            @Html.LabelFor(model => model.SubjectName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubjectName)
            @Html.ValidationMessageFor(model => model.SubjectName)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
