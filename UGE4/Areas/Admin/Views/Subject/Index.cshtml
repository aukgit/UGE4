@model IEnumerable<UGE4.DbInfrastructure.Subject>

@{
    ViewBag.Title = "Subject";
}

<h2>Subject</h2>

<p>
    @Html.ActionLink("Create Subject", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SubjectName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubjectName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SubjectID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SubjectID }, new {  onclick="return confirm('Are you sure you want to delete this(can't be retrive again)?')" })
        </td>
    </tr>
}

</table>
