@model IEnumerable<UGE4.DbInfrastructure.Book>

@{
    ViewBag.Title = "Book";
}

<h2>Book</h2>

<p>
    @Html.ActionLink("Create Book", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BookName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BookName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BookID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BookID }, new {  onclick="return confirm('Are you sure you want to delete this(can't be retrive again)?')" })
        </td>
    </tr>
}

</table>
