@model UGE4.Models.MCQ

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>MCQ</legend>

        @Html.HiddenFor(model => model.MCQID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Duration)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Duration)
            @Html.ValidationMessageFor(model => model.Duration)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ArticleID, "Article")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ArticleID", String.Empty)
            @Html.ValidationMessageFor(model => model.ArticleID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DisplayQuestion)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DisplayQuestion)
            @Html.ValidationMessageFor(model => model.DisplayQuestion)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
